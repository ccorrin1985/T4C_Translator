<Window x:Class="T4C_Translator.DockerProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T4C_Translator"
        mc:Ignorable="d"
		Style="{StaticResource CustomWindowStyle}"
        Title="Please Wait..." Height="200" Width="500" WindowStartupLocation="CenterOwner">
	<Grid>
		<StackPanel VerticalAlignment="Center">
			<TextBlock Name="MessageTextBlock"  Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
			<ProgressBar Name="FakeProgressBar" Height="30"  Margin="10" IsIndeterminate="True"/>
		</StackPanel>
	</Grid>
</Window>
